extends layout
include ../app_server/views/_includes/sharedHTMLfunctions

block content
    .row.banner
        .col-12
            h1= pageHeader.title
            small &nbsp;#{pageHeader.strapline}
    .row
        .col-12.col-md-8
            .error= message
            app-home-list
                //- ▼▼▼ 이 줄이 빠져 있었습니다! ▼▼▼
                each location in locations
                    //- ▼▼▼ 아래 내용들은 반드시 들여쓰기를 해야 합니다 ▼▼▼
                    .card
                        .card-block
                            h4
                                a(href=`/location/${location._id}`)= location.name
                                +outputRating(location.rating)
                                span.badge.badge-pill.badge-default.float-right= location.distance
                            p.address= location.address
                            .facilities
                                each facility in location.facilities
                                    span.badge.badge-warning= facility

        .col-12.col-md-4
            p.lead= sidebar

block scripts
    script(src='/build/runtime.e4985b6c090739db.js')
    script(src='/build/polyfills.7809da1470408aee.js')
    script(src='/build/main.6affdf316b9ecc8b.js')